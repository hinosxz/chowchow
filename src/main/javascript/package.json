{
  "name": "chowchow-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@mars/heroku-js-runtime-env": "3.0.2",
    "antd": "3.24.2",
    "ky": "0.15.0",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "react-router-dom": "5.1.2",
    "react-select": "3.0.8"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb-typescript"
    ],
    "rules": {
      "import/prefer-default-export": "off",
      "import/no-default-export": "error",
      "import/order": [
        "error",
        {
          "groups": [
            [
              "builtin",
              "external"
            ],
            "internal",
            "sibling"
          ],
          "newlines-between": "always"
        }
      ],
      "react/prop-types": 0
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "src"
          ]
        }
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/jest": "24.0.19",
    "@types/node": "12.7.12",
    "@types/react": "16.9.6",
    "@types/react-dom": "16.9.2",
    "@types/react-router-dom": "5.1.1",
    "@types/react-select": "3.0.6",
    "eslint-config-airbnb-typescript": "5.0.0",
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "node-sass": "7.0.0",
    "prettier": "1.18.2",
    "react-scripts": "3.2.0",
    "typescript": "3.6.4"
  }
}
